<% layout('layout/boilerplate') -%>
<body>
    <div class="col-8 offset-2">
        <h3>Edit a New Post</h3>
        <form method="post" action="/listings/<%= list.id %>?_method=PUT">
            <div class="form-group">
                <label for="title">Title</label>
                <input name="listing[title]" type="text" class="form-control" value="<%= list.title %>">
            </div><br/>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="listing[description]" cols="10" class="form-control"><%= list.description %></textarea>
            </div><br/>
            <div class="form-group">
                <label for="image">image Filename</label>
                <input name="listing[image]" class="form-control" value="<%= list.image.filename %>">
            </div><br/>
            <div class="form-group">
                <label for="image">image URL</label>
                <input name="listing[image]" class="form-control" value="<%= list.image.url %>">
            </div><br/>
            
            <div class="form-group col-md-8">
                <label for="price">Price</label>
                <input name="listing[price]" type="number" class="form-control" value="<%= list.price %>">
            </div><br/>
            
        </div><br/>
        <div class="row">
        <div class="form-group col-md-4">
            <label for="location">Location</label>
            <input name="listing[location]" class="form-control" value="<%= list.location %>">
        </div><br/>
            <div class="form-group col-md-8">
                <label for="country">Country</label>
                <input name="listing[country]" class="form-control" value="<%= list.country %>">
            </div><br/>
        </div>
            <br/>
            <button class="btn btn-primary">Edit</button>
        </form>
    <div>
    
</body>
</html>